{
  "name": "baidu-img-extensions",
  "version": "1.0.0",
  "description": "百度搜索引擎更换logo扩展程序!",
  "scripts": {
    "build:bg": "parcel build src/background/index.ts --dist-dir dist/background  --no-source-maps",
    "build:content": "parcel build src/content/index.ts --dist-dir dist/content --no-source-maps",
    "build": "npm run build:bg && npm run build:content",
    "clean": "rimraf dist",
    "copy:static": "copyfiles manifest.json assets/**/*  dist",
    "copy:file": "copyfiles src/options/**/* src/popup/**/*  dist",
    "dist": "npm run clean && npm run build && npm run copy:static && npm run copy:file",
    "lint": "eslint --ext .ts,.tsx ./src"
  },
  "author": "Chunle Tian",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/chrome": "0.0.183",
    "copyfiles": "^2.4.1",
    "parcel": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "dependencies": {}
}
